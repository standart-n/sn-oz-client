form#signin-form-enter(action="index.html", onSubmit="return false;", method="GET")
	table(align="center", valign="top", cellpadding="1", cellspacing="1", border="0")
		tr(valign="top")
			td
				div.signin-header У вас уже есть логин и пароль?
		tr(valign="top")
			td
				div.signin-caption Авторизация
		tr(valign="top")
			td
				div.signin-hint Введите логин и пароль
		tr(valign="top")
			td
				div.signin-input-outer
					input#signin-input-login.signin-input.signin-input-blur.signin-type-enter(
						value="Логин", data-def-value="Логин", 
						type="text", size="30", maxlength="30")
		tr
			td
				div.signin-input-outer
					input#signin-input-preview.signin-input.signin-input-blur.signin-type-enter(
						value="Пароль", data-def-value="Пароль", data-def-type="password", 
						type="password", size="30", maxlength="30")
		tr
			td
				a#signin-button-enter.signin-button(href="#users/signin/enter") Войти
	div.hidden
		input(type="submit")
